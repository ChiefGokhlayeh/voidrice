#
#	logger "setting up tablet"
#	if [ ! -z "$(xsetwacom list)" ]; then
#		xsetwacom set "Wacom Intuos BT M Pad pad" "Button" "1" "button +4 "
#		xsetwacom set "Wacom Intuos BT M Pad pad" "Button" "2" "button +5 "
