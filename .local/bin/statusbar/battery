#!/bin/sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send " Battery module" ": discharging
: not charging
♻: stagnant charge
: charging
: charged
: battery very low!
- Text color reflects charge left" ;;
esac

count="$#"

for bat in "$@"
do
    capacity=$(cat /sys/class/power_supply/"$bat"/capacity) || exit
    status=$(cat /sys/class/power_supply/"$bat"/status)

    if [ "$capacity" -ge 75 ]; then
	color="$(xrdb -query | grep color2 -m 1 | cut -f 2)"
	discharge=""
    elif [ "$capacity" -ge 50 ]; then
	color="$(xrdb -query | grep color3 -m 1 | cut -f 2)"
	discharge=""
    elif [ "$capacity" -ge 25 ]; then
	color="$(xrdb -query | grep color1 -m 1 | cut -f 2)"
	discharge=""
    else
	color="$(xrdb -query | grep color1 -m 1 | cut -f 2)"
	discharge=""
	warn=" "
    fi

    [ -z $warn ] && warn=""

    [ "$status" = "Charging" ] && color="$(xrdb -query | grep color4 -m 1 | cut -f 2)"

    printf "<span color='%s'>%s%s %s</span>" "$color" "$warn" "$(echo "$status" | sed -e "s/,//;s/Discharging/$discharge/;s/Not Charging//;s/Charging//;s/Unknown//;s/Full//;s/ 0*/ /g;s/ :/ /g")" "$(echo "$capacity" | sed -e 's/$/%/')"

    if [ "$count" -gt 1 ]; then
	printf " "
	count=$((count-1))
    fi
done

